/* USER CODE BEGIN Header */
/**
  ******************************************************************************
  * @file           : main.c
  * @brief          : MPU6050 Sensör Okuma - USB CDC ile Veri Gönderme
  ******************************************************************************
  * STM32F103 + USB CDC (Virtual COM Port) kullanımı
  ******************************************************************************
  */
/* USER CODE END Header */

/* Includes ------------------------------------------------------------------*/
#include "main.h"

/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
#include "mpu6050.h"
#include "usbd_cdc_if.h"
#include <stdio.h>
#include <string.h>
/* USER CODE END Includes */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;

/* USER CODE BEGIN PV */
MPU6050_Data mpu_data;
char usb_buffer[200];
uint8_t init_done = 0;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_I2C1_Init(void);
static void MX_USB_DEVICE_Init(void);

/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */
  uint8_t init_status;
  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/
  HAL_Init();
  SystemClock_Config();
  MX_GPIO_Init();
  MX_I2C1_Init();
  MX_USB_DEVICE_Init();

  /* USER CODE BEGIN 2 */
  // USB bağlantısının kurulması için bekle
  HAL_Delay(2000);

  // Başlangıç mesajı
  sprintf(usb_buffer, "\r\n--- MPU6050 Sensor Test (USB CDC) ---\r\n");
  CDC_Transmit_FS((uint8_t*)usb_buffer, strlen(usb_buffer));
  HAL_Delay(100);

  sprintf(usb_buffer, "Initializing MPU6050...\r\n");
  CDC_Transmit_FS((uint8_t*)usb_buffer, strlen(usb_buffer));
  HAL_Delay(100);

  // MPU6050 başlatma
  init_status = MPU6050_Init(&hi2c1);

  if (init_status == 0) {
      sprintf(usb_buffer, "MPU6050 initialized successfully!\r\n\r\n");
      CDC_Transmit_FS((uint8_t*)usb_buffer, strlen(usb_buffer));
      init_done = 1;
  } else {
      sprintf(usb_buffer, "ERROR: MPU6050 initialization failed!\r\n");
      CDC_Transmit_FS((uint8_t*)usb_buffer, strlen(usb_buffer));
      HAL_Delay(100);
      sprintf(usb_buffer, "Check I2C connections and address.\r\n");
      CDC_Transmit_FS((uint8_t*)usb_buffer, strlen(usb_buffer));
      while(1) {
          HAL_Delay(1000); // Hata durumunda dur
      }
  }

  sprintf(usb_buffer, "Starting data acquisition...\r\n");
  CDC_Transmit_FS((uint8_t*)usb_buffer, strlen(usb_buffer));
  HAL_Delay(100);

  sprintf(usb_buffer, "Format: Ax, Ay, Az | Gx, Gy, Gz | Temp\r\n");
  CDC_Transmit_FS((uint8_t*)usb_buffer, strlen(usb_buffer));
  HAL_Delay(100);

  sprintf(usb_buffer, "----------------------------------------\r\n");
  CDC_Transmit_FS((uint8_t*)usb_buffer, strlen(usb_buffer));
  HAL_Delay(200);

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
    if (init_done) {
        // Tüm sensör verilerini oku
        MPU6050_Read_All(&hi2c1, &mpu_data);

        // Sıcaklık hesapla
        float temperature = MPU6050_Get_Temp(mpu_data.temp);

        // İvme verilerini g cinsine çevir (±2g ayarı için 16384 LSB/g)
        float accel_x_g = (float)mpu_data.accel_x / 16384.0f;
        float accel_y_g = (float)mpu_data.accel_y / 16384.0f;
        float accel_z_g = (float)mpu_data.accel_z / 16384.0f;

        // Gyro verilerini °/s cinsine çevir (±250°/s ayarı için 131 LSB/°/s)
        float gyro_x_dps = (float)mpu_data.gyro_x / 131.0f;
        float gyro_y_dps = (float)mpu_data.gyro_y / 131.0f;
        float gyro_z_dps = (float)mpu_data.gyro_z / 131.0f;

        // Verileri formatlı şekilde yazdır
        sprintf(usb_buffer,
                "Accel: X=%6.2f Y=%6.2f Z=%6.2f g | Gyro: X=%7.2f Y=%7.2f Z=%7.2f deg/s | Temp: %5.2f C\r\n",
                accel_x_g, accel_y_g, accel_z_g,
                gyro_x_dps, gyro_y_dps, gyro_z_dps,
                temperature);

        CDC_Transmit_FS((uint8_t*)usb_buffer, strlen(usb_buffer));

        HAL_Delay(100);  // 100ms bekleme (10 Hz okuma hızı)
    }
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};
  RCC_PeriphCLKInitTypeDef PeriphClkInit = {0};

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSE;
  RCC_OscInitStruct.HSEState = RCC_HSE_ON;
  RCC_OscInitStruct.HSEPredivValue = RCC_HSE_PREDIV_DIV1;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSE;
  RCC_OscInitStruct.PLL.PLLMUL = RCC_PLL_MUL9;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
  PeriphClkInit.PeriphClockSelection = RCC_PERIPHCLK_USB;
  PeriphClkInit.UsbClockSelection = RCC_USBCLKSOURCE_PLL_DIV1_5;
  if (HAL_RCCEx_PeriphCLKConfig(&PeriphClkInit) != HAL_OK)
  {
    Error_Handler();
  }
}

/**
  * @brief I2C1 Initialization Function
  * @param None
  * @retval None
  */
static void MX_I2C1_Init(void)
{
  /* USER CODE BEGIN I2C1_Init 0 */
  /* USER CODE END I2C1_Init 0 */

  /* USER CODE BEGIN I2C1_Init 1 */
  /* USER CODE END I2C1_Init 1 */
  hi2c1.Instance = I2C1;
  hi2c1.Init.ClockSpeed = 100000;
  hi2c1.Init.DutyCycle = I2C_DUTYCYCLE_2;
  hi2c1.Init.OwnAddress1 = 0;
  hi2c1.Init.AddressingMode = I2C_ADDRESSINGMODE_7BIT;
  hi2c1.Init.DualAddressMode = I2C_DUALADDRESS_DISABLE;
  hi2c1.Init.OwnAddress2 = 0;
  hi2c1.Init.GeneralCallMode = I2C_GENERALCALL_DISABLE;
  hi2c1.Init.NoStretchMode = I2C_NOSTRETCH_DISABLE;
  if (HAL_I2C_Init(&hi2c1) != HAL_OK)
  {
    Error_Handler();
  }
  /* USER CODE BEGIN I2C1_Init 2 */
  /* USER CODE END I2C1_Init 2 */
}

/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOD_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOC, GPIO_PIN_13, GPIO_PIN_RESET);

  /*Configure GPIO pin : PC13 */
  GPIO_InitStruct.Pin = GPIO_PIN_13;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOC, &GPIO_InitStruct);
}

