/* USER CODE BEGIN Header */
/**
  ******************************************************************************
  * @file           : main.c
  * @brief          : MPU6050 Sensör Okuma ve UART Yazdırma
  ******************************************************************************
  * STM32CubeIDE ile I2C ve UART'ı yapılandırdıktan sonra bu kodu kullanın
  * I2C1 ve USART2 (veya istediğiniz UART) aktif olmalı
  ******************************************************************************
  */
/* USER CODE END Header */

/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include "mpu6050.h"
#include <stdio.h>
#include <string.h>

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
MPU6050_Data mpu_data;
char uart_buffer[200];
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_I2C1_Init(void);
static void MX_USART2_UART_Init(void);

/* USER CODE BEGIN PFP */
// UART için printf yönlendirmesi
int _write(int file, char *ptr, int len) {
    HAL_UART_Transmit(&huart2, (uint8_t*)ptr, len, HAL_MAX_DELAY);
    return len;
}
/* USER CODE END PFP */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */
  uint8_t init_status;
  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/
  HAL_Init();
  SystemClock_Config();
  MX_GPIO_Init();
  MX_I2C1_Init();
  MX_USART2_UART_Init();

  /* USER CODE BEGIN 2 */
  // MPU6050 başlatma
  printf("\r\n--- MPU6050 Sensor Test ---\r\n");
  printf("Initializing MPU6050...\r\n");

  init_status = MPU6050_Init(&hi2c1);

  if (init_status == 0) {
      printf("MPU6050 initialized successfully!\r\n\r\n");
  } else {
      printf("ERROR: MPU6050 initialization failed!\r\n");
      printf("Check I2C connections and address.\r\n");
      while(1); // Hata durumunda dur
  }

  printf("Starting data acquisition...\r\n");
  printf("Format: Ax, Ay, Az | Gx, Gy, Gz | Temp\r\n");
  printf("----------------------------------------\r\n");
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
    // Tüm sensör verilerini oku
    MPU6050_Read_All(&hi2c1, &mpu_data);

    // Sıcaklık hesapla
    float temperature = MPU6050_Get_Temp(mpu_data.temp);

    // İvme verilerini g cinsine çevir (±2g ayarı için 16384 LSB/g)
    float accel_x_g = (float)mpu_data.accel_x / 16384.0f;
    float accel_y_g = (float)mpu_data.accel_y / 16384.0f;
    float accel_z_g = (float)mpu_data.accel_z / 16384.0f;

    // Gyro verilerini °/s cinsine çevir (±250°/s ayarı için 131 LSB/°/s)
    float gyro_x_dps = (float)mpu_data.gyro_x / 131.0f;
    float gyro_y_dps = (float)mpu_data.gyro_y / 131.0f;
    float gyro_z_dps = (float)mpu_data.gyro_z / 131.0f;

    // Verileri formatlı şekilde yazdır
    sprintf(uart_buffer,
            "Accel: X=%.2f Y=%.2f Z=%.2f g | Gyro: X=%.2f Y=%.2f Z=%.2f °/s | Temp: %.2f°C\r\n",
            accel_x_g, accel_y_g, accel_z_g,
            gyro_x_dps, gyro_y_dps, gyro_z_dps,
            temperature);

    HAL_UART_Transmit(&huart2, (uint8_t*)uart_buffer, strlen(uart_buffer), HAL_MAX_DELAY);

    // Alternatif: Ham verileri yazdır
    /*
    sprintf(uart_buffer,
            "Raw - Accel: %6d %6d %6d | Gyro: %6d %6d %6d | Temp: %d\r\n",
            mpu_data.accel_x, mpu_data.accel_y, mpu_data.accel_z,
            mpu_data.gyro_x, mpu_data.gyro_y, mpu_data.gyro_z,
            mpu_data.temp);
    HAL_UART_Transmit(&huart2, (uint8_t*)uart_buffer, strlen(uart_buffer), HAL_MAX_DELAY);
    */

    HAL_Delay(100);  // 100ms bekleme (10 Hz okuma hızı)
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  // STM32CubeIDE tarafından oluşturulacak
  // Projenize göre düzenleyin
}

/**
  * @brief I2C1 Initialization Function
  * @param None
  * @retval None
  */
static void MX_I2C1_Init(void)
{
  /* USER CODE BEGIN I2C1_Init 0 */
  /* USER CODE END I2C1_Init 0 */

  /* USER CODE BEGIN I2C1_Init 1 */
  /* USER CODE END I2C1_Init 1 */
  hi2c1.Instance = I2C1;
  hi2c1.Init.ClockSpeed = 100000;  // 100kHz
  hi2c1.Init.DutyCycle = I2C_DUTYCYCLE_2;
  hi2c1.Init.OwnAddress1 = 0;
  hi2c1.Init.AddressingMode = I2C_ADDRESSINGMODE_7BIT;
  hi2c1.Init.DualAddressMode = I2C_DUALADDRESS_DISABLE;
  hi2c1.Init.OwnAddress2 = 0;
  hi2c1.Init.GeneralCallMode = I2C_GENERALCALL_DISABLE;
  hi2c1.Init.NoStretchMode = I2C_NOSTRETCH_DISABLE;
  if (HAL_I2C_Init(&hi2c1) != HAL_OK)
  {
    Error_Handler();
  }
  /* USER CODE BEGIN I2C1_Init 2 */
  /* USER CODE END I2C1_Init 2 */
}

/**
  * @brief USART2 Initialization Function
  * @param None
  * @retval None
  */
static void MX_USART2_UART_Init(void)
{
  /* USER CODE BEGIN USART2_Init 0 */
  /* USER CODE END USART2_Init 0 */

  /* USER CODE BEGIN USART2_Init 1 */
  /* USER CODE END USART2_Init 1 */
  huart2.Instance = USART2;
  huart2.Init.BaudRate = 115200;
  huart2.Init.WordLength = UART_WORDLENGTH_8B;
  huart2.Init.StopBits = UART_STOPBITS_1;
  huart2.Init.Parity = UART_PARITY_NONE;
  huart2.Init.Mode = UART_MODE_TX_RX;
  huart2.Init.HwFlowCtl = UART_HWCONTROL_NONE;
  huart2.Init.OverSampling = UART_OVERSAMPLING_16;
  if (HAL_UART_Init(&huart2) != HAL_OK)
  {
    Error_Handler();
  }
  /* USER CODE BEGIN USART2_Init 2 */
  /* USER CODE END USART2_Init 2 */
}

/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();
}

/**
  * @brief  This function is executed in case of error occurrence.
  * @retval None
  */
void Error_Handler(void)
{
  /* USER CODE BEGIN Error_Handler_Debug */
  __disable_irq();
  while (1)
  {
  }
  /* USER CODE END Error_Handler_Debug */
}

