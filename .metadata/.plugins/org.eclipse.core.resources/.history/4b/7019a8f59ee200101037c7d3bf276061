/* Private variables ---------------------------------------------------------*/

/* USER CODE BEGIN PV */
uint8_t servo_angle = 0;
volatile uint8_t usb_new_data = 0;

uint16_t Servo_Angle_To_Pulse(uint8_t angle)
{
    return 1000 + ((uint32_t)angle * 1000) / 180;
}
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
