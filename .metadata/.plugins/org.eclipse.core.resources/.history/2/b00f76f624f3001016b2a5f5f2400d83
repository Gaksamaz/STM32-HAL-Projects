#include "mpu6050.h"

uint8_t MPU6050_Init(I2C_HandleTypeDef *hi2c) {
    uint8_t check;
    uint8_t data;

    // WHO_AM_I kontrol (0x68 dönmeli)
    HAL_I2C_Mem_Read(hi2c, MPU6050_ADDR, MPU6050_WHO_AM_I, 1, &check, 1, 1000);

    if (check == 0x68) {
        // Uyku modundan çık
        data = 0x00;
        HAL_I2C_Mem_Write(hi2c, MPU6050_ADDR, MPU6050_PWR_MGMT_1, 1, &data, 1, 1000);

        // Accelerometer ±2g ayarla
        data = 0x00;
        HAL_I2C_Mem_Write(hi2c, MPU6050_ADDR, MPU6050_ACCEL_CONFIG, 1, &data, 1, 1000);

        return 0;  // Başarılı
    }

    return 1;  // Hata
}

void MPU6050_Read_Accel(I2C_HandleTypeDef *hi2c, MPU6050_Data *data) {
    uint8_t raw_data[6];

    // 6 byte oku
    HAL_I2C_Mem_Read(hi2c, MPU6050_ADDR, MPU6050_ACCEL_XOUT_H, 1, raw_data, 6, 1000);

    // Verileri birleştir
    data->accel_x = (int16_t)(raw_data[0] << 8 | raw_data[1]);
    data->accel_y = (int16_t)(raw_data[2] << 8 | raw_data[3]);
    data->accel_z = (int16_t)(raw_data[4] << 8 | raw_data[5]);
}
